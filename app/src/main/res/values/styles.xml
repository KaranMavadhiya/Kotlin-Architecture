<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="AppTheme.Splashscreen">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <!--Style for Progress Dialog-->
    <style name="AppTheme.ProgressDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/frank_ruhl_libre</item>

        <item name="colorError">@color/colorError</item>

        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
    </style>

    <style name="textInputEditText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:hint">@dimen/_13ssp</item>

        <item name="android:fontFamily">@font/frank_ruhl_libre</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.buttonStyle"  parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBackground</item>

        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>

        <item name="shapeAppearance">@style/ShapeAppearance</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textSize">@dimen/_13ssp</item></style>

    <style name="ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/frank_ruhl_libre</item>
        <item name="android:fontFamily">@font/frank_ruhl_libre</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="textStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>

    <style name="textStyle.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>